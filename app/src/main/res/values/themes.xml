<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Light) -->
    <style name="Theme.BitNexDial" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_on_primary</item>

        <!-- Window properties -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.BitNexDial.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.BitNexDial</item>
    </style>

    <!-- Incoming Call Theme (Full Screen, Dark) -->
    <style name="Theme.BitNexDial.IncomingCall" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/incoming_call_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <!-- In-Call Theme (Dark) -->
    <style name="Theme.BitNexDial.InCall" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/call_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/call_background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.BitNexDial.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <!-- Bottom Sheet Theme -->
    <style name="Theme.BitNexDial.BottomSheet" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="bottomSheetStyle">@style/Widget.BitNexDial.BottomSheet</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.BitNexDial.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.BitNexDial.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.BitNexDial.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Call Button (Answer - Green) -->
    <style name="Widget.BitNexDial.Button.CallAnswer">
        <item name="android:background">@drawable/bg_call_button_answer</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Call Button (Decline - Red) -->
    <style name="Widget.BitNexDial.Button.CallDecline">
        <item name="android:background">@drawable/bg_call_button_decline</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="Widget.BitNexDial.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.BitNexDial.BottomSheet</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.BitNexDial.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- EditText Style -->
    <style name="Widget.BitNexDial.EditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.BitNexDial.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.BitNexDial.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.BitNexDial.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.BitNexDial.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.BitNexDial.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Keypad Text Appearances -->
    <style name="TextAppearance.BitNexDial.Keypad" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/keypad_text</item>
    </style>

    <style name="TextAppearance.BitNexDial.Keypad.Number">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/keypad_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.BitNexDial.Keypad.Letters">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/keypad_subtext</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Call Screen Text Appearances -->
    <style name="TextAppearance.BitNexDial.Call" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.BitNexDial.Call.Name">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.BitNexDial.Call.Number">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="TextAppearance.BitNexDial.Call.Status">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="TextAppearance.BitNexDial.Call.Timer">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>
